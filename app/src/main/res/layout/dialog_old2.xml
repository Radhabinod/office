<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_rounded_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvSendTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_profile"
        android:gravity="center"
        android:text="Send Message to "
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_profile"
        android:layout_marginRight="@dimen/margin_profile"
        android:layout_marginTop="@dimen/margin_profile">

        <ImageView
            android:id="@+id/ivTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/gray"
            android:padding="5dp"
            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:tint="@color/gray" />


        <Spinner
            android:id="@+id/spTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:minHeight="30dp"></Spinner>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginLeft="@dimen/margin_profile"
        android:layout_marginRight="@dimen/margin_profile"
        ></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_profile"
        android:layout_marginRight="@dimen/margin_profile"
        android:layout_marginTop="@dimen/margin_profile"
        android:background="@color/input_color">

        <ImageView
            android:id="@+id/ivVenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/gray"
            android:padding="5dp"
            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:tint="@color/gray"
            android:visibility="visible" />


        <Spinner
            android:id="@+id/spVenue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:minHeight="30dp"></Spinner>


    </RelativeLayout>

    <EditText
        android:id="@+id/etMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_profile"
        android:layout_marginRight="@dimen/margin_profile"
        android:layout_marginTop="@dimen/margin_profile"
        android:background="@color/input_color"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:minLines="2"
        android:padding="9dp"
        android:text="Please come."
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="@color/gray_text_color">

        <requestFocus></requestFocus>
    </EditText>


    <Button
        android:id="@+id/btnSendMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/margin_profile"
        android:layout_marginRight="@dimen/margin_profile"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_gradient_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Send"
        android:textColor="@color/white" />
</LinearLayout>